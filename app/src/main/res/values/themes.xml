<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.ArcLauncher" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/arc_primary</item>
        <item name="colorPrimaryVariant">@color/arc_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/arc_secondary</item>
        <item name="colorSecondaryVariant">@color/arc_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/arc_background</item>
        <item name="colorSurface">@color/arc_surface</item>
        <item name="colorOnBackground">@color/arc_on_background</item>
        <item name="colorOnSurface">@color/arc_on_surface</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/arc_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/arc_background</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/arc_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/arc_on_background</item>
        <item name="android:textColorSecondary">@color/arc_on_surface_variant</item>
    </style>
    
    <!-- Launcher specific theme -->
    <style name="Theme.ArcLauncher.Launcher" parent="Theme.ArcLauncher">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Card style -->
    <style name="ArcCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/arc_card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- App icon style -->
    <style name="ArcAppIcon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/app_icon_background</item>
    </style>
    
    <!-- Button styles -->
    <style name="ArcButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/arc_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="ArcButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/arc_primary</item>
        <item name="android:textColor">@color/arc_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>
